<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="examples.course.clickandclean.ChangePasswordScreen"
    android:background="@color/mycolor">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email"
        android:background="#ffffffff"
        android:hint="@string/login_email"
        android:drawableLeft="@drawable/ic_action4"
        android:typeface="normal"
        android:layout_marginTop="106dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material" />

    <Button
        android:layout_width="@dimen/dialog_fixed_width_minor"
        android:layout_height="wrap_content"
        android:text="@string/change_password2"
        android:id="@+id/change"
        android:background="@color/hint_foreground_material_light"
        android:textColor="#ffffffff"
        android:typeface="sans"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/newpassword"
        android:layout_alignLeft="@+id/oldpassword"
        android:layout_alignStart="@+id/oldpassword"
        android:layout_alignRight="@+id/oldpassword"
        android:layout_alignEnd="@+id/oldpassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/oldpassword"
        android:background="#ffffffff"
        android:hint="@string/old_password"
        android:drawableLeft="@drawable/ic_action2"
        android:typeface="normal"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material"
        android:password="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newpassword"
        android:background="#ffffffff"
        android:hint="@string/new_password"
        android:drawableLeft="@drawable/ic_action2"
        android:typeface="normal"
        android:layout_below="@+id/oldpassword"
        android:layout_alignLeft="@+id/change"
        android:layout_alignStart="@+id/change"
        android:password="true" />

</RelativeLayout>
