<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
    android:background="@color/mycolor"
    android:clickable="false"
    android:id="@+id/motto">

    <Button
        android:layout_width="@dimen/dialog_fixed_width_minor"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/login"
        android:background="@color/hint_foreground_material_light"
        android:textColor="#ffffffff"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:typeface="sans" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/icon"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff"
        android:hint="@string/login_email"
        android:layout_margin="@dimen/abc_action_bar_default_padding_material"
        android:drawableLeft="@drawable/ic_action4"
        android:typeface="normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/password"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:background="#ffffffff"
        android:hint="@string/login_password"
        android:password="true"
        android:layout_below="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:drawableLeft="@drawable/ic_action2"
        android:typeface="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:id="@+id/forgot_password"
        android:textColor="#ffffffff"
        android:clickable="true"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/login"
        android:layout_marginTop="15dp"
        android:typeface="sans"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_acc"
        android:id="@+id/register"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/forgot_password"
        android:layout_alignStart="@+id/forgot_password"
        android:layout_below="@+id/change_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/title"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:textSize="26dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:id="@+id/change_password"
        android:textColor="#ffffffff"
        android:clickable="true"
        android:typeface="sans"
        android:layout_below="@+id/forgot_password"
        android:layout_alignLeft="@+id/forgot_password"
        android:layout_alignStart="@+id/forgot_password"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material" />

</RelativeLayout><!-- From: file:/home/anusha/AndroidStudioProjects/ClickAndCleanFinal/app/src/main/res/layout/activity_main_screen.xml -->