<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="examples.course.clickandclean.RegisterScreen"
    android:background="@color/mycolor">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:layout_marginTop="122dp"
        android:hint="@string/register_name"
        android:background="#ffffffff"
        android:drawableLeft="@drawable/ic_action3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email"
        android:hint="@string/register_email"
        android:background="#ffffffff"
        android:drawableLeft="@drawable/ic_action4"
        android:layout_centerVertical="true"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material"/>

    <Button
        android:layout_width="@dimen/dialog_fixed_width_minor"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/register"
        android:background="@color/hint_foreground_material_light"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignStart="@+id/name"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/password"
        android:hint="@string/register_password"
        android:password="true"
        android:background="#ffffffff"
        android:drawableLeft="@drawable/ic_action2"
        android:layout_centerVertical="true"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/confirm_password"
        android:hint="@string/register_confirm_password"
        android:password="true"
        android:background="#ffffffff"
        android:drawableLeft="@drawable/ic_action2"
        android:layout_centerVertical="true"
        android:layout_below="@+id/password"
        android:layout_alignRight="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_heading"
        android:id="@+id/reg_head"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff"
        android:textSize="28dp"
        android:typeface="sans" />

</RelativeLayout>
