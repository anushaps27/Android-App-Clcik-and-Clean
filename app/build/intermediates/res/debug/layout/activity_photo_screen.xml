<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="examples.course.clickandclean.PhotoScreen"
    android:id="@+id/photo"
    android:background="@drawable/images2">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_action"
        android:layout_below="@+id/imageText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@color/background_floating_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageText"
        android:text="@string/photo_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/critical_level"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_button_min_width_overflow_material"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/critical_value"
        android:hint="@string/critical_value"
        android:background="#ffffffff"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/imageText"
        android:layout_alignStart="@+id/imageText"
        android:layout_alignRight="@+id/imageText"
        android:layout_alignEnd="@+id/imageText"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material"
        android:layout_marginTop="@dimen/abc_action_bar_default_padding_material" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register a Complaint"
        android:id="@+id/ok_button"
        android:background="@color/hint_foreground_material_light"
        android:textColor="#ffffffff"
        android:layout_below="@+id/critical_value"
        android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
        android:layout_alignRight="@+id/critical_value"
        android:layout_alignEnd="@+id/critical_value"
        android:layout_alignLeft="@+id/critical_value"
        android:layout_alignStart="@+id/critical_value" />

</RelativeLayout>
